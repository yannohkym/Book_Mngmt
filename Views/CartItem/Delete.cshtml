@model Book_Management.Models.CartItem
<div class="card shadow-sm mb-5 p-4 bg-white text-center">
<h2>Delete Selected CartItem</h2>

<h3>Are you sure you want to delete this Cart?</h3>
</div>
<div class="container mt-5">
    <div class="card shadow-sm p-4 bg-white">
        <h4 class="text-primary font-weight-bold text-center">Cart Item Details</h4>
        <hr />

        <!-- CartItem Details Display -->
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold text-dark">
                Category Name:
            </dt>
            <dd class="col-sm-9 text-muted">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>

            <dt class="col-sm-3 font-weight-bold text-dark">
                Description:
            </dt>
            <dd class="col-sm-9 text-muted">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <!-- Form for Deleting Cart Item -->
        <div class="text-center mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CartId" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card h4 {
        font-size: 1.5rem;
    }

    .card dt {
        font-size: 1.1rem;
    }

    .card dd {
        font-size: 1rem;
    }
</style>
